<div class="row">
  <div class="col-md-5 col-md-offset-5">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

          <fieldset>
            <div class="form-group input-group">
              <span class="input-group-addon glyphicon glyphicon-envelope"></span>
              <%= f.text_field :email, autofocus: true, class: 'form-control input-lg input-round ', placeholder: 'Email' %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon glyphicon glyphicon-lock"></span>
              <%= f.password_field :password, class: 'form-control input-lg input-round', placeholder: 'Password', autocomplete: "off" %>
            </div>

            <div class="divider"></div>

            <div class="form-group">
              <%= f.submit "Login", class: 'btn btn-primary btn-lg btn-round btn-block text-center' %>
            </div>
          </fieldset>

        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>